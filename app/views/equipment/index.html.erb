<h1>Listing equipment</h1>
 <script type="text/javascript">
  function populate()
  { book = Spreadsheet.open 'CHI-OCP-AHU-1001_test.xls';
     sheet1 = book.worksheet 0;
       for (var i=0;i<20;i++)
         { equipments=Equipment.new;
          row=sheet1.row(i);
          equipments[i].uniqueid = row[0];
        }
  }
 </script>

  

 
  

<table>
  <tr>
    <th>Uniqueid</th>
    <th>Barcode</th>
    <th>Assetprofile</th>
    <th>Building</th>
    <th>Floor</th>
    <th>Room</th>
    <th>Department</th>
    <th>System</th>
    <th>Partof</th>
    <th>Manufacturer</th>
    <th>Model</th>
    <th>Serial</th>
    <th>Warrstart</th>
    <th>Warrend</th>
    <th>Instructions</th>
    <th>Components</th>
    <th>Pmschedule</th>
    <th>Partnumber</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @equipment.each do |equipment| %>
  <tr>
    <td><%= equipment.uniqueid %></td>
    <td><%= equipment.barcode %></td>
    <td><%= equipment.assetprofile %></td>
    <td><%= equipment.building %></td>
    <td><%= equipment.floor %></td>
    <td><%= equipment.room %></td>
    <td><%= equipment.department %></td>
    <td><%= equipment.system %></td>
    <td><%= equipment.partof %></td>
    <td><%= equipment.manufacturer %></td>
    <td><%= equipment.model %></td>
    <td><%= equipment.serial %></td>
    <td><%= equipment.warrstart %></td>
    <td><%= equipment.warrend %></td>
    <td><%= equipment.instructions %></td>
    <td><%= equipment.components %></td>
    <td><%= equipment.pmschedule %></td>
    <td><%= equipment.partnumber %></td>
    <td><%= equipment.url %></td>
    <td><%= link_to 'Show', equipment %></td>
    <td><%= link_to 'Edit', edit_equipment_path(equipment) %></td>
    <td><%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<button type="button" onclick="populate()">Populate from excel file</button>
<br />

<h2>Import Equipment</h2>

<%= form_tag import_equipment_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

