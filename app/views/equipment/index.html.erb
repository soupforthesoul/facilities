<script type="text/javascript">
function delete_table ()
{
 
window.location.reload();
Equipment.delete_all
}
</script>

<h1>Listing equipment</h1>
 
  

 <p>
  Download:
  <%= link_to "CSV", equipment_index_path(format: "csv") %> |
  <%= link_to "Excel", equipment_index_path(format: "xls") %> | 
  <%= link_to "ExcelX", equipment_index_path(format: "xlsx") %>
</p>
  

<table>
  <tr>
    <th>Uniqueid</th>
    <th>Barcode</th>
    <th>Assetprofile</th>
    <th>Building</th>
    <th>Floor</th>
    <th>Room</th>
    <th>Department</th>
    <th>System</th>
    <th>Partof</th>
    <th>Manufacturer</th>
    <th>Model</th>
    <th>Serial</th>
    <th>Warrstart</th>
    <th>Warrend</th>
    <th>Instructions</th>
    <th>Components</th>
    <th>Pmschedule</th>
    <th>Partnumber</th>
    <th>Url</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @equipment.each do |equipment| %>
  <tr>
    <td><%= equipment.uniqueid %></td>
    <td><%= equipment.barcode %></td>
    <td><%= equipment.assetprofile %></td>
    <td><%= equipment.building %></td>
    <td><%= equipment.floor %></td>
    <td><%= equipment.room %></td>
    <td><%= equipment.department %></td>
    <td><%= equipment.system %></td>
    <td><%= equipment.partof %></td>
    <td><%= equipment.manufacturer %></td>
    <td><%= equipment.model %></td>
    <td><%= equipment.serial %></td>
    <td><%= equipment.warrstart %></td>
    <td><%= equipment.warrend %></td>
    <td><%= equipment.instructions %></td>
    <td><%= equipment.components %></td>
    <td><%= equipment.pmschedule %></td>
    <td><%= equipment.partnumber %></td>
    <td><%= link_to equipment.url, equipment.url  %></td>
    <td><%= link_to 'Show', equipment %></td>
    <td><%= link_to 'Edit', edit_equipment_path(equipment) %></td>
    <td><%= link_to 'Destroy', equipment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<button type="button" onclick=" delete_table()">Delete Entire Table</button> 
<br />

<h2>Import Equipment</h2>

<%= form_tag import_equipment_index_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

